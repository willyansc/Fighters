<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.anonymous.whale.sim.ImageMapper">
    <resultMap id="BaseResultMap" type="com.anonymous.whale.sim.domain.Image">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,url,type
    </sql>

    <select id="listByParam" parameterType="com.anonymous.whale.sim.domain.Image" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from image where 1=1
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="name != null">
            and name = #{name}
        </if>
        <if test="url != null">
            and url = #{url}
        </if>
        <if test="type != null">
            and type = #{type}
        </if>
    </select>
</mapper>
